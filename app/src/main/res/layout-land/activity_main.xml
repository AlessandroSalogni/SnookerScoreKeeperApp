<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.2"
        android:contentDescription="@string/background_description"
        android:scaleType="fitXY"
        android:src="@drawable/snooker_table_land" />

    <LinearLayout
        android:id="@+id/player_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/p1_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/player_1"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/p1_score"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value_score"
                    android:textColor="@color/white"
                    android:textSize="56sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:text="@string/pot"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/red_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/red_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/yellow_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/yellow_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/green_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/green_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/brown_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/brown_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/blue_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/blue_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pink_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/pink_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/black_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/black_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="16dp"
                    android:text="@string/foul"
                    android:textColor="@color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/p1_fouls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/start_value_score"
                    android:textColor="@color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="@color/white" />

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/p2_text"
                    android:layout_width="0dp"
                    android:layout_weight="2"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:text="@string/player_2"
                    android:gravity="center_horizontal"
                    android:textColor="@color/white"
                    android:textSize="34sp" />

                <TextView
                    android:id="@+id/p2_score"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value_score"
                    android:textColor="@color/white"
                    android:textSize="56sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="12dp"
                android:layout_marginTop="8dp"
                android:text="@string/pot"
                android:textColor="@color/white"
                android:textSize="20sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/red_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/red_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/yellow_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/yellow_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/green_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/green_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/brown_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/brown_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/blue_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/blue_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/pink_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/pink_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/black_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="1dp"
                    android:background="@drawable/black_ball"
                    android:gravity="center"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="28dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginRight="16dp"
                    android:text="@string/foul"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/p2_fouls"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_horizontal"
                    android:text="@string/start_value_score"
                    android:textColor="@android:color/white"
                    android:textSize="20sp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

    <TextView
        android:id="@+id/match_story"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_above="@+id/linear_layout_btn"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="32dp"
        android:textColor="#FFF"
        android:textSize="20sp" />

    <LinearLayout
        android:id="@+id/linear_layout_btn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="16dp"
        android:orientation="horizontal">


        <Button
            android:id="@+id/wrong_shot"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonColor"
            android:onClick="wrongShot"
            android:paddingLeft="18dp"
            android:paddingRight="18dp"
            android:layout_marginRight="16dp"
            android:text="@string/wrong_shot" />

        <Button
            android:id="@+id/yellow_ball_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/yellow_ball"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="colourBallShot"
            android:text="@string/start_value_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:textSize="24sp" />

        <Button
            android:id="@+id/green_ball_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/green_ball"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="colourBallShot"
            android:text="@string/start_value_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:textSize="24sp" />

        <Button
            android:id="@+id/brown_ball_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/brown_ball"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="colourBallShot"
            android:text="@string/start_value_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:textSize="24sp" />

        <Button
            android:id="@+id/red_ball_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/red_ball"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="redBallShot"
            android:text="@string/start_red_ball"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:textSize="24sp" />

        <Button
            android:id="@+id/blue_ball_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/blue_ball"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="colourBallShot"
            android:text="@string/start_value_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:textSize="24sp" />

        <Button
            android:id="@+id/pink_ball_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/pink_ball"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="colourBallShot"
            android:text="@string/start_value_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:textSize="24sp" />

        <Button
            android:id="@+id/black_ball_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="2dp"
            android:background="@drawable/black_ball"
            android:gravity="center"
            android:minHeight="0dp"
            android:minWidth="0dp"
            android:onClick="colourBallShot"
            android:text="@string/start_value_btn"
            android:textColor="@android:color/white"
            android:layout_gravity="bottom"
            android:textSize="24sp" />

        <Button
            android:id="@+id/button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/buttonColor"
            android:onClick="restartMatch"
            android:paddingLeft="9dp"
            android:layout_marginLeft="16dp"
            android:paddingRight="9dp"
            android:text="@string/restart_match" />
    </LinearLayout>
</RelativeLayout>
