<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:src="@drawable/snooker_table"
        android:alpha="0.3"
        android:scaleType="fitXY"
        android:contentDescription="@string/background_description"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="32dp">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_1"
                android:textSize="34sp"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_value"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:textSize="56sp"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pot"
                android:textSize="24sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/red_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/red_ball"
                    android:textColor="@android:color/white"
                    android:layout_margin="3dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/yellow_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/yellow_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />

                <TextView
                    android:id="@+id/green_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/green_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />

                <TextView
                    android:id="@+id/brown_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/brown_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/blue_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/blue_ball"
                    android:textColor="@android:color/white"
                    android:layout_margin="3dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/pink_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/pink_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />

                <TextView
                    android:id="@+id/black_ball_p1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/black_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="2dp"
            android:layout_height="match_parent"
            android:background="#FFF"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/player_2"
                android:textSize="34sp"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/start_value"
                android:layout_margin="16dp"
                android:textStyle="bold"
                android:textSize="56sp"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pot"
                android:textSize="24sp"
                android:layout_marginTop="24dp"
                android:layout_marginBottom="12dp"
                android:textColor="#FFF"
                android:layout_gravity="center_horizontal"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/red_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/red_ball"
                    android:textColor="@android:color/white"
                    android:layout_margin="3dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/yellow_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/yellow_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />

                <TextView
                    android:id="@+id/green_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/green_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />

                <TextView
                    android:id="@+id/brown_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/brown_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/blue_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/blue_ball"
                    android:textColor="@android:color/white"
                    android:layout_margin="3dp"
                    android:gravity="center"/>

                <TextView
                    android:id="@+id/pink_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/pink_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />

                <TextView
                    android:id="@+id/black_ball_p2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/start_value"
                    android:textSize="24sp"
                    android:background="@drawable/black_ball"
                    android:textColor="@android:color/white"
                    android:gravity="center"
                    android:layout_margin="3dp" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</RelativeLayout>
